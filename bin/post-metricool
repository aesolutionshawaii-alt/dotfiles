#!/bin/bash
# Schedule posts to Metricool for JN Chevrolet
# Usage: post-metricool [--dry-run] [--post-id=001]

PROJECT_DIR="$HOME/Desktop/jn-chevrolet-content"

if [ ! -d "$PROJECT_DIR" ]; then
  echo "Error: Project not found at $PROJECT_DIR"
  exit 1
fi

cd "$PROJECT_DIR" && node src/post-metricool.js "$@"
