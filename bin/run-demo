#!/bin/bash
# Run terminal demos and capture output for visuals
# Usage: run-demo --list | run-demo --command="your command"

PROJECT_DIR="$HOME/Desktop/jn-chevrolet-content"

if [ ! -d "$PROJECT_DIR" ]; then
  echo "Error: Project not found at $PROJECT_DIR"
  exit 1
fi

cd "$PROJECT_DIR" && node src/run-demo.js "$@"
