#!/bin/bash
# Scrape news sources for JN Chevrolet content ideas
# Usage: scrape-news [--source=auto|hawaii|reddit]

PROJECT_DIR="$HOME/Desktop/jn-chevrolet-content"

if [ ! -d "$PROJECT_DIR" ]; then
  echo "Error: Project not found at $PROJECT_DIR"
  exit 1
fi

cd "$PROJECT_DIR" && node src/scrape-news.js "$@"
