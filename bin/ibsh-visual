#!/bin/bash
# Generate styled visuals for IBSH social media posts
# Usage: ibsh-visual --type=terminal|mermaid|code --content="..."

PROJECT_DIR="$HOME/Desktop/ibsh-content-system"

if [ ! -d "$PROJECT_DIR" ]; then
  echo "Error: Project not found at $PROJECT_DIR"
  exit 1
fi

cd "$PROJECT_DIR" && node src/generate-visual.js "$@"
