#!/bin/bash
# Find reply opportunities for JN Chevrolet X account
# Usage: jnchev-replies [--url="tweet_url"]

PROJECT_DIR="$HOME/Desktop/jn-chevrolet-content"

if [ ! -d "$PROJECT_DIR" ]; then
  echo "Error: Project not found at $PROJECT_DIR"
  exit 1
fi

cd "$PROJECT_DIR" && node src/find-replies.js "$@"
